import MailIcon from './icons/MailIcon.astro'
---

<div id='mc_embed_shell'>
	<div id='mc_embed_signup'>
		<form
			action='https://wellbowledshane.us14.list-manage.com/subscribe/post?u=eece953426244c6401aed7c93&id=2964952af2&f_id=00ac9be1f0'
			;
			method='post'
			id='mc-embedded-subscribe-form'
			name='mc-embedded-subscribe-form'
			class='validate'
			target='_blank'
		>
			<div id='mc_embed_signup_scroll w-full'>
				<div class='mc-field-group w-full'>
					<label for='mce-EMAIL'>Email Address</label><input
						type='email'
						name='EMAIL'
						class='required email w-full py-2 px-4 rounded text-neutral-900 bg-white'
						id='mce-EMAIL'
						required=''
						value=''
					/>
				</div>
				<div hidden=''><input type='hidden' name='tags' value='7063046' /></div>
				<div id='mce-responses' class='clear foot'>
					<div class='response' id='mce-error-response' style='display: none;'></div>
					<div class='response' id='mce-success-response' style='display: none;'></div>
				</div>
				<div aria-hidden='true' style='position: absolute; left: -5000px;'>
					<input type='text' name='b_eece953426244c6401aed7c93_2964952af2' tabindex='-1' value='' />
				</div>
				<div class='optionalParent'>
					<div class='clear foot py-2 w-full'>
						<button
							class='w-full bg-pop border-2 border-pop transition-all text-white font-semibold py-2 px-4 rounded inline-flex justify-center hover:bg-transparent hover:border-2 hover:border-white'
							type='submit'
						>
							<MailIcon />
							<span class='ml-2'>Subscribe</span>
						</button>
					</div>
				</div>
			</div>
		</form>
	</div>
	<script
		is:inline
		type='text/javascript'
		src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script>
	<script is:inline type='text/javascript'>
		;(function ($) {
			window.fnames = new Array()
			window.ftypes = new Array()
			fnames[0] = 'EMAIL'
			ftypes[0] = 'email'
			fnames[1] = 'FNAME'
			ftypes[1] = 'text'
			fnames[2] = 'LNAME'
			ftypes[2] = 'text'
			fnames[3] = 'ADDRESS'
			ftypes[3] = 'address'
			fnames[4] = 'PHONE'
			ftypes[4] = 'phone'
